@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movies";
}

<div class="text-danger">
    <h1>Movies</h1>

</div>

<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get" class="row g-3 align-items-center">
    <div class="col-auto">
        <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
            <option value="">All</option>
        </select>
    </div>

    <div class="col-auto">
        <input type="text" asp-for="SearchString" class="form-control" placeholder="Enter title..." />
    </div>

    <div class="col-auto">
        <input type="submit" value="Filter" class="btn btn-danger" />
    </div>
</form>

<h2></h2>
<h2></h2>

<h2></h2>



<table class="table table-dark  text-white">
    <thead style="background-color: #8B0000; color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].URL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            
            <tr>
                <td>
                    <img src="@item.Photo"
                         style="width:100px; height:150px; object-fit:cover; background-color:black;"
                         onerror="this.src=''; this.style.backgroundColor='black';" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    @for (int i = 0; i < (@item.Rating?.Length ?? 0); i++)
                    {
                    <span class="star-display" data-rating="@item.Rating" style="color: gold; font-size: 1.2rem;">&#9733;</span>
                    }
                </td>
                <td>
                    <a href="@item.URL" target="_blank" class="text-info">Visit Movie Page</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
